<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="01-create-shipments-table" author="pjserrano">
        <createTable tableName="shipments">
            <column name="shipId" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="productCode" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="orderDate" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(90)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(45)" remarks="Valores posibles: PENDING, CANCELLED, SHIPPED, DELIVERED, UNDELIVERED, RETURNED">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>